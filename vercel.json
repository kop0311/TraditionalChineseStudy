{
  "framework": "nextjs",
  "buildCommand": "bun next build",
  "installCommand": "bun install",
  "outputDirectory": ".next",
  "devCommand": "bun next dev",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "CDN_BOOTSTRAP": "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css",
    "CDN_HANZI": "https://cdn.jsdelivr.net/npm/hanzi-writer@3.5.0/dist/hanzi-writer.min.js",
    "CDN_TINYMCE": "https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js",
    "RATE_LIMIT_WINDOW_MS": "900000",
    "RATE_LIMIT_MAX_REQUESTS": "1000",
    "AUTH_RATE_LIMIT_MAX": "5",
    "API_RATE_LIMIT_MAX": "100",
    "UPLOAD_MAX_SIZE": "2097152",
    "UPLOAD_ALLOWED_TYPES": "jpg,jpeg,png,gif",
    "LOG_LEVEL": "warn",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/admin/:path*",
      "destination": "/api/admin/:path*",
      "permanent": false
    }
  ],
  "crons": [],
  "regions": ["iad1"]
}