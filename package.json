{
  "name": "xiaoxiao-dushulang",
  "version": "2.0.0",
  "description": "小小读书郎 - 儿童中华经典学习平台",
  "main": "app.js",
  "scripts": {
    "start": "bun next start",
    "dev": "bun next dev --turbo",
    "build": "bun next build && bun tsc",
    "build:next": "bun next build",
    "build:backend": "bun tsc",
    "start:next": "bun next start",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:nextjs": "bun test --config=jest.config.nextjs.js",
    "test:nextjs:watch": "bun test --config=jest.config.nextjs.js --watch",
    "test:components": "bun test --config=jest.config.nextjs.js --selectProjects=frontend",
    "test:backend": "bun test --config=jest.config.nextjs.js --selectProjects=backend",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:headed": "bunx playwright test --headed",
    "test:e2e:debug": "bunx playwright test --debug",
    "test:e2e:core": "bunx playwright test tests/e2e/specs/core",
    "test:e2e:components": "bunx playwright test tests/e2e/specs/components",
    "test:e2e:technical": "bunx playwright test tests/e2e/specs/technical",
    "test:e2e:accessibility": "bunx playwright test tests/e2e/specs/accessibility",
    "test:e2e:chrome": "bunx playwright test --project=chromium",
    "test:e2e:firefox": "bunx playwright test --project=firefox",
    "test:e2e:safari": "bunx playwright test --project=webkit",
    "test:e2e:mobile": "bunx playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:report": "bunx playwright show-report",
    "test:e2e:install": "bunx playwright install",
    "lint": "bun next lint && bunx eslint .",
    "lint:fix": "bun next lint --fix && bunx eslint . --fix",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "type-check": "bun tsc --noEmit",
    "audit:fix": "bun audit --fix",
    "clean": "rm -rf .next coverage logs/*.log backups/migration/*.json test-results/ bun.lockb",
    "docker:build": "docker build -t xiaoxiao-dushulang .",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.4.2",
    "@next/env": "^15.4.2",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.52.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.0.3",
    "dotenv": "^16.3.1",
    "framer-motion": "^11.18.2",
    "jsdom": "^22.1.0",
    "lucide-react": "^0.525.0",
    "next": "^15.4.2",
    "pg": "^8.13.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@module-federation/nextjs-mf": "^8.8.33",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "^15.4.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.2",
    "jest-watch-typeahead": "^2.2.2",
    "playwright": "^1.54.1",
    "playwright-lighthouse": "^4.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.19",
  "trustedDependencies": [
    "@playwright/test",
    "playwright",
    "esbuild"
  ],
  "keywords": [
    "chinese",
    "education",
    "classics",
    "children",
    "traditional"
  ],
  "author": "Developer",
  "license": "MIT"
}
