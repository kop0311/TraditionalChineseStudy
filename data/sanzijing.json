{
  "classic": "三字经",
  "author": "王应麟",
  "dynasty": "宋朝",
  "chapters": [
    {
      "chapter_no": 1,
      "title": "第一章",
      "sentences": [
        {
          "seq": 1,
          "simp": "人之初，性本善。",
          "trad": "人之初，性本善。",
          "pinyin": ["rén", "zhī", "chū", "，", "xìng", "běn", "shàn", "。"]
        },
        {
          "seq": 2,
          "simp": "性相近，习相远。",
          "trad": "性相近，習相遠。",
          "pinyin": ["xìng", "xiāng", "jìn", "，", "xí", "xiāng", "yuǎn", "。"]
        },
        {
          "seq": 3,
          "simp": "苟不教，性乃迁。",
          "trad": "苟不教，性乃遷。",
          "pinyin": ["gǒu", "bù", "jiào", "，", "xìng", "nǎi", "qiān", "。"]
        },
        {
          "seq": 4,
          "simp": "教之道，贵以专。",
          "trad": "教之道，貴以專。",
          "pinyin": ["jiào", "zhī", "dào", "，", "guì", "yǐ", "zhuān", "。"]
        },
        {
          "seq": 5,
          "simp": "昔孟母，择邻处。",
          "trad": "昔孟母，擇鄰處。",
          "pinyin": ["xī", "mèng", "mǔ", "，", "zé", "lín", "chù", "。"]
        },
        {
          "seq": 6,
          "simp": "子不学，断机杼。",
          "trad": "子不學，斷機杼。",
          "pinyin": ["zǐ", "bù", "xué", "，", "duàn", "jī", "zhù", "。"]
        },
        {
          "seq": 7,
          "simp": "窦燕山，有义方。",
          "trad": "竇燕山，有義方。",
          "pinyin": ["dòu", "yān", "shān", "，", "yǒu", "yì", "fāng", "。"]
        },
        {
          "seq": 8,
          "simp": "教五子，名俱扬。",
          "trad": "教五子，名俱揚。",
          "pinyin": ["jiào", "wǔ", "zǐ", "，", "míng", "jù", "yáng", "。"]
        },
        {
          "seq": 9,
          "simp": "养不教，父之过。",
          "trad": "養不教，父之過。",
          "pinyin": ["yǎng", "bù", "jiào", "，", "fù", "zhī", "guò", "。"]
        },
        {
          "seq": 10,
          "simp": "教不严，师之惰。",
          "trad": "教不嚴，師之惰。",
          "pinyin": ["jiào", "bù", "yán", "，", "shī", "zhī", "duò", "。"]
        }
      ]
    },
    {
      "chapter_no": 2,
      "title": "第二章",
      "sentences": [
        {
          "seq": 1,
          "simp": "子不学，非所宜。",
          "trad": "子不學，非所宜。",
          "pinyin": ["zǐ", "bù", "xué", "，", "fēi", "suǒ", "yí", "。"]
        },
        {
          "seq": 2,
          "simp": "幼不学，老何为。",
          "trad": "幼不學，老何為。",
          "pinyin": ["yòu", "bù", "xué", "，", "lǎo", "hé", "wéi", "。"]
        },
        {
          "seq": 3,
          "simp": "玉不琢，不成器。",
          "trad": "玉不琢，不成器。",
          "pinyin": ["yù", "bù", "zhuó", "，", "bù", "chéng", "qì", "。"]
        },
        {
          "seq": 4,
          "simp": "人不学，不知义。",
          "trad": "人不學，不知義。",
          "pinyin": ["rén", "bù", "xué", "，", "bù", "zhī", "yì", "。"]
        },
        {
          "seq": 5,
          "simp": "为人子，方少时。",
          "trad": "為人子，方少時。",
          "pinyin": ["wéi", "rén", "zǐ", "，", "fāng", "shào", "shí", "。"]
        },
        {
          "seq": 6,
          "simp": "亲师友，习礼仪。",
          "trad": "親師友，習禮儀。",
          "pinyin": ["qīn", "shī", "yǒu", "，", "xí", "lǐ", "yí", "。"]
        },
        {
          "seq": 7,
          "simp": "香九龄，能温席。",
          "trad": "香九齡，能溫席。",
          "pinyin": ["xiāng", "jiǔ", "líng", "，", "néng", "wēn", "xí", "。"]
        },
        {
          "seq": 8,
          "simp": "孝于亲，所当执。",
          "trad": "孝於親，所當執。",
          "pinyin": ["xiào", "yú", "qīn", "，", "suǒ", "dāng", "zhí", "。"]
        },
        {
          "seq": 9,
          "simp": "融四岁，能让梨。",
          "trad": "融四歲，能讓梨。",
          "pinyin": ["róng", "sì", "suì", "，", "néng", "ràng", "lí", "。"]
        },
        {
          "seq": 10,
          "simp": "弟于长，宜先知。",
          "trad": "弟於長，宜先知。",
          "pinyin": ["dì", "yú", "zhǎng", "，", "yí", "xiān", "zhī", "。"]
        }
      ]
    },
    {
      "chapter_no": 3,
      "title": "第三章",
      "sentences": [
        {
          "seq": 1,
          "simp": "首孝悌，次见闻。",
          "trad": "首孝悌，次見聞。",
          "pinyin": ["shǒu", "xiào", "tì", "，", "cì", "jiàn", "wén", "。"]
        },
        {
          "seq": 2,
          "simp": "知某数，识某文。",
          "trad": "知某數，識某文。",
          "pinyin": ["zhī", "mǒu", "shù", "，", "shí", "mǒu", "wén", "。"]
        },
        {
          "seq": 3,
          "simp": "一而十，十而百。",
          "trad": "一而十，十而百。",
          "pinyin": ["yī", "ér", "shí", "，", "shí", "ér", "bǎi", "。"]
        },
        {
          "seq": 4,
          "simp": "百而千，千而万。",
          "trad": "百而千，千而萬。",
          "pinyin": ["bǎi", "ér", "qiān", "，", "qiān", "ér", "wàn", "。"]
        },
        {
          "seq": 5,
          "simp": "三才者，天地人。",
          "trad": "三才者，天地人。",
          "pinyin": ["sān", "cái", "zhě", "，", "tiān", "dì", "rén", "。"]
        },
        {
          "seq": 6,
          "simp": "三光者，日月星。",
          "trad": "三光者，日月星。",
          "pinyin": ["sān", "guāng", "zhě", "，", "rì", "yuè", "xīng", "。"]
        },
        {
          "seq": 7,
          "simp": "三纲者，君臣义。",
          "trad": "三綱者，君臣義。",
          "pinyin": ["sān", "gāng", "zhě", "，", "jūn", "chén", "yì", "。"]
        },
        {
          "seq": 8,
          "simp": "父子亲，夫妇顺。",
          "trad": "父子親，夫婦順。",
          "pinyin": ["fù", "zǐ", "qīn", "，", "fū", "fù", "shùn", "。"]
        }
      ]
    },
    {
      "chapter_no": 4,
      "title": "第四章",
      "sentences": [
        {
          "seq": 1,
          "simp": "曰春夏，曰秋冬。",
          "trad": "曰春夏，曰秋冬。",
          "pinyin": ["yuē", "chūn", "xià", "，", "yuē", "qiū", "dōng", "。"]
        },
        {
          "seq": 2,
          "simp": "此四时，运不穷。",
          "trad": "此四時，運不窮。",
          "pinyin": ["cǐ", "sì", "shí", "，", "yùn", "bù", "qióng", "。"]
        },
        {
          "seq": 3,
          "simp": "曰南北，曰西东。",
          "trad": "曰南北，曰西東。",
          "pinyin": ["yuē", "nán", "běi", "，", "yuē", "xī", "dōng", "。"]
        },
        {
          "seq": 4,
          "simp": "此四方，应乎中。",
          "trad": "此四方，應乎中。",
          "pinyin": ["cǐ", "sì", "fāng", "，", "yìng", "hū", "zhōng", "。"]
        },
        {
          "seq": 5,
          "simp": "曰水火，木金土。",
          "trad": "曰水火，木金土。",
          "pinyin": ["yuē", "shuǐ", "huǒ", "，", "mù", "jīn", "tǔ", "。"]
        },
        {
          "seq": 6,
          "simp": "此五行，本乎数。",
          "trad": "此五行，本乎數。",
          "pinyin": ["cǐ", "wǔ", "xíng", "，", "běn", "hū", "shù", "。"]
        },
        {
          "seq": 7,
          "simp": "曰仁义，礼智信。",
          "trad": "曰仁義，禮智信。",
          "pinyin": ["yuē", "rén", "yì", "，", "lǐ", "zhì", "xìn", "。"]
        },
        {
          "seq": 8,
          "simp": "此五常，不容紊。",
          "trad": "此五常，不容紊。",
          "pinyin": ["cǐ", "wǔ", "cháng", "，", "bù", "róng", "wěn", "。"]
        }
      ]
    },
    {
      "chapter_no": 5,
      "title": "第五章",
      "sentences": [
        {
          "seq": 1,
          "simp": "稻粱菽，麦黍稷。",
          "trad": "稻粱菽，麥黍稷。",
          "pinyin": ["dào", "liáng", "shū", "，", "mài", "shǔ", "jì", "。"]
        },
        {
          "seq": 2,
          "simp": "此六谷，人所食。",
          "trad": "此六穀，人所食。",
          "pinyin": ["cǐ", "liù", "gǔ", "，", "rén", "suǒ", "shí", "。"]
        },
        {
          "seq": 3,
          "simp": "马牛羊，鸡犬豕。",
          "trad": "馬牛羊，雞犬豕。",
          "pinyin": ["mǎ", "niú", "yáng", "，", "jī", "quǎn", "shǐ", "。"]
        },
        {
          "seq": 4,
          "simp": "此六畜，人所饲。",
          "trad": "此六畜，人所飼。",
          "pinyin": ["cǐ", "liù", "chù", "，", "rén", "suǒ", "sì", "。"]
        },
        {
          "seq": 5,
          "simp": "曰喜怒，曰哀惧。",
          "trad": "曰喜怒，曰哀懼。",
          "pinyin": ["yuē", "xǐ", "nù", "，", "yuē", "āi", "jù", "。"]
        },
        {
          "seq": 6,
          "simp": "爱恶欲，七情具。",
          "trad": "愛惡欲，七情具。",
          "pinyin": ["ài", "wù", "yù", "，", "qī", "qíng", "jù", "。"]
        },
        {
          "seq": 7,
          "simp": "匏土革，木石金。",
          "trad": "匏土革，木石金。",
          "pinyin": ["páo", "tǔ", "gé", "，", "mù", "shí", "jīn", "。"]
        },
        {
          "seq": 8,
          "simp": "丝与竹，乃八音。",
          "trad": "絲與竹，乃八音。",
          "pinyin": ["sī", "yǔ", "zhú", "，", "nǎi", "bā", "yīn", "。"]
        }
      ]
    },
    {
      "chapter_no": 6,
      "title": "第六章",
      "sentences": [
        {
          "seq": 1,
          "simp": "高曾祖，父而身。",
          "trad": "高曾祖，父而身。",
          "pinyin": ["gāo", "zēng", "zǔ", "，", "fù", "ér", "shēn", "。"]
        },
        {
          "seq": 2,
          "simp": "身而子，子而孙。",
          "trad": "身而子，子而孫。",
          "pinyin": ["shēn", "ér", "zǐ", "，", "zǐ", "ér", "sūn", "。"]
        },
        {
          "seq": 3,
          "simp": "自子孙，至玄曾。",
          "trad": "自子孫，至玄曾。",
          "pinyin": ["zì", "zǐ", "sūn", "，", "zhì", "xuán", "zēng", "。"]
        },
        {
          "seq": 4,
          "simp": "乃九族，人之伦。",
          "trad": "乃九族，人之倫。",
          "pinyin": ["nǎi", "jiǔ", "zú", "，", "rén", "zhī", "lún", "。"]
        },
        {
          "seq": 5,
          "simp": "父子恩，夫妇从。",
          "trad": "父子恩，夫婦從。",
          "pinyin": ["fù", "zǐ", "ēn", "，", "fū", "fù", "cóng", "。"]
        },
        {
          "seq": 6,
          "simp": "兄则友，弟则恭。",
          "trad": "兄則友，弟則恭。",
          "pinyin": ["xiōng", "zé", "yǒu", "，", "dì", "zé", "gōng", "。"]
        },
        {
          "seq": 7,
          "simp": "长幼序，友与朋。",
          "trad": "長幼序，友與朋。",
          "pinyin": ["zhǎng", "yòu", "xù", "，", "yǒu", "yǔ", "péng", "。"]
        },
        {
          "seq": 8,
          "simp": "君则敬，臣则忠。",
          "trad": "君則敬，臣則忠。",
          "pinyin": ["jūn", "zé", "jìng", "，", "chén", "zé", "zhōng", "。"]
        },
        {
          "seq": 9,
          "simp": "此十义，人所同。",
          "trad": "此十義，人所同。",
          "pinyin": ["cǐ", "shí", "yì", "，", "rén", "suǒ", "tóng", "。"]
        }
      ]
    },
    {
      "chapter_no": 7,
      "title": "第七章",
      "sentences": [
        {
          "seq": 1,
          "simp": "凡训蒙，须讲究。",
          "trad": "凡訓蒙，須講究。",
          "pinyin": ["fán", "xùn", "méng", "，", "xū", "jiǎng", "jiū", "。"]
        },
        {
          "seq": 2,
          "simp": "详训诂，明句读。",
          "trad": "詳訓詁，明句讀。",
          "pinyin": ["xiáng", "xùn", "gǔ", "，", "míng", "jù", "dòu", "。"]
        },
        {
          "seq": 3,
          "simp": "为学者，必有初。",
          "trad": "為學者，必有初。",
          "pinyin": ["wéi", "xué", "zhě", "，", "bì", "yǒu", "chū", "。"]
        },
        {
          "seq": 4,
          "simp": "小学终，至四书。",
          "trad": "小學終，至四書。",
          "pinyin": ["xiǎo", "xué", "zhōng", "，", "zhì", "sì", "shū", "。"]
        },
        {
          "seq": 5,
          "simp": "论语者，二十篇。",
          "trad": "論語者，二十篇。",
          "pinyin": ["lún", "yǔ", "zhě", "，", "èr", "shí", "piān", "。"]
        },
        {
          "seq": 6,
          "simp": "群弟子，记善言。",
          "trad": "群弟子，記善言。",
          "pinyin": ["qún", "dì", "zǐ", "，", "jì", "shàn", "yán", "。"]
        },
        {
          "seq": 7,
          "simp": "孟子者，七篇止。",
          "trad": "孟子者，七篇止。",
          "pinyin": ["mèng", "zǐ", "zhě", "，", "qī", "piān", "zhǐ", "。"]
        },
        {
          "seq": 8,
          "simp": "讲道德，说仁义。",
          "trad": "講道德，說仁義。",
          "pinyin": ["jiǎng", "dào", "dé", "，", "shuō", "rén", "yì", "。"]
        }
      ]
    },
    {
      "chapter_no": 8,
      "title": "第八章",
      "sentences": [
        {
          "seq": 1,
          "simp": "作中庸，子思笔。",
          "trad": "作中庸，子思筆。",
          "pinyin": ["zuò", "zhōng", "yōng", "，", "zǐ", "sī", "bǐ", "。"]
        },
        {
          "seq": 2,
          "simp": "中不偏，庸不易。",
          "trad": "中不偏，庸不易。",
          "pinyin": ["zhōng", "bù", "piān", "，", "yōng", "bù", "yì", "。"]
        },
        {
          "seq": 3,
          "simp": "作大学，乃曾子。",
          "trad": "作大學，乃曾子。",
          "pinyin": ["zuò", "dà", "xué", "，", "nǎi", "zēng", "zǐ", "。"]
        },
        {
          "seq": 4,
          "simp": "自修齐，至平治。",
          "trad": "自修齊，至平治。",
          "pinyin": ["zì", "xiū", "qí", "，", "zhì", "píng", "zhì", "。"]
        },
        {
          "seq": 5,
          "simp": "孝经通，四书熟。",
          "trad": "孝經通，四書熟。",
          "pinyin": ["xiào", "jīng", "tōng", "，", "sì", "shū", "shú", "。"]
        },
        {
          "seq": 6,
          "simp": "如六经，始可读。",
          "trad": "如六經，始可讀。",
          "pinyin": ["rú", "liù", "jīng", "，", "shǐ", "kě", "dú", "。"]
        },
        {
          "seq": 7,
          "simp": "诗书易，礼春秋。",
          "trad": "詩書易，禮春秋。",
          "pinyin": ["shī", "shū", "yì", "，", "lǐ", "chūn", "qiū", "。"]
        },
        {
          "seq": 8,
          "simp": "号六经，当讲求。",
          "trad": "號六經，當講求。",
          "pinyin": ["hào", "liù", "jīng", "，", "dāng", "jiǎng", "qiú", "。"]
        }
      ]
    },
    {
      "chapter_no": 9,
      "title": "第九章",
      "sentences": [
        {
          "seq": 1,
          "simp": "有连山，有归藏。",
          "trad": "有連山，有歸藏。",
          "pinyin": ["yǒu", "lián", "shān", "，", "yǒu", "guī", "cáng", "。"]
        },
        {
          "seq": 2,
          "simp": "有周易，三易详。",
          "trad": "有周易，三易詳。",
          "pinyin": ["yǒu", "zhōu", "yì", "，", "sān", "yì", "xiáng", "。"]
        },
        {
          "seq": 3,
          "simp": "有典谟，有训诰。",
          "trad": "有典謨，有訓誥。",
          "pinyin": ["yǒu", "diǎn", "mó", "，", "yǒu", "xùn", "gào", "。"]
        },
        {
          "seq": 4,
          "simp": "有誓命，书之奥。",
          "trad": "有誓命，書之奧。",
          "pinyin": ["yǒu", "shì", "mìng", "，", "shū", "zhī", "ào", "。"]
        },
        {
          "seq": 5,
          "simp": "我周公，作周礼。",
          "trad": "我周公，作周禮。",
          "pinyin": ["wǒ", "zhōu", "gōng", "，", "zuò", "zhōu", "lǐ", "。"]
        },
        {
          "seq": 6,
          "simp": "著六官，存治体。",
          "trad": "著六官，存治體。",
          "pinyin": ["zhù", "liù", "guān", "，", "cún", "zhì", "tǐ", "。"]
        },
        {
          "seq": 7,
          "simp": "大小戴，注礼记。",
          "trad": "大小戴，注禮記。",
          "pinyin": ["dà", "xiǎo", "dài", "，", "zhù", "lǐ", "jì", "。"]
        },
        {
          "seq": 8,
          "simp": "述圣言，礼乐备。",
          "trad": "述聖言，禮樂備。",
          "pinyin": ["shù", "shèng", "yán", "，", "lǐ", "yuè", "bèi", "。"]
        }
      ]
    },
    {
      "chapter_no": 10,
      "title": "第十章",
      "sentences": [
        {
          "seq": 1,
          "simp": "曰国风，曰雅颂。",
