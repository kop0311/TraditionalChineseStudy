{
  "classic": "弟子规",
  "author": "李毓秀",
  "dynasty": "清朝",
  "chapters": [
    {
      "chapter_no": 1,
      "title": "总叙",
      "sentences": [
        {
          "seq": 1,
          "simp": "弟子规，圣人训。",
          "trad": "弟子規，聖人訓。",
          "pinyin": ["dì", "zǐ", "guī", "，", "shèng", "rén", "xùn", "。"]
        },
        {
          "seq": 2,
          "simp": "首孝悌，次谨信。",
          "trad": "首孝悌，次謹信。",
          "pinyin": ["shǒu", "xiào", "tì", "，", "cì", "jǐn", "xìn", "。"]
        },
        {
          "seq": 3,
          "simp": "泛爱众，而亲仁。",
          "trad": "汎愛眾，而親仁。",
          "pinyin": ["fàn", "ài", "zhòng", "，", "ér", "qīn", "rén", "。"]
        },
        {
          "seq": 4,
          "simp": "有余力，则学文。",
          "trad": "有餘力，則學文。",
          "pinyin": ["yǒu", "yú", "lì", "，", "zé", "xué", "wén", "。"]
        }
      ]
    },
    {
      "chapter_no": 2,
      "title": "入则孝",
      "sentences": [
        {
          "seq": 1,
          "simp": "父母呼，应勿缓。",
          "trad": "父母呼，應勿緩。",
          "pinyin": ["fù", "mǔ", "hū", "，", "yìng", "wù", "huǎn", "。"]
        },
        {
          "seq": 2,
          "simp": "父母命，行勿懒。",
          "trad": "父母命，行勿懶。",
          "pinyin": ["fù", "mǔ", "mìng", "，", "xíng", "wù", "lǎn", "。"]
        },
        {
          "seq": 3,
          "simp": "父母教，须敬听。",
          "trad": "父母教，須敬聽。",
          "pinyin": ["fù", "mǔ", "jiào", "，", "xū", "jìng", "tīng", "。"]
        },
        {
          "seq": 4,
          "simp": "父母责，须顺承。",
          "trad": "父母責，須順承。",
          "pinyin": ["fù", "mǔ", "zé", "，", "xū", "shùn", "chéng", "。"]
        },
        {
          "seq": 5,
          "simp": "冬则温，夏则凊。",
          "trad": "冬則溫，夏則凊。",
          "pinyin": ["dōng", "zé", "wēn", "，", "xià", "zé", "qìng", "。"]
        },
        {
          "seq": 6,
          "simp": "晨则省，昏则定。",
          "trad": "晨則省，昏則定。",
          "pinyin": ["chén", "zé", "xǐng", "，", "hūn", "zé", "dìng", "。"]
        },
        {
          "seq": 7,
          "simp": "出必告，反必面。",
          "trad": "出必告，反必面。",
          "pinyin": ["chū", "bì", "gào", "，", "fǎn", "bì", "miàn", "。"]
        },
        {
          "seq": 8,
          "simp": "居有常，业无变。",
          "trad": "居有常，業無變。",
          "pinyin": ["jū", "yǒu", "cháng", "，", "yè", "wú", "biàn", "。"]
        },
        {
          "seq": 9,
          "simp": "事虽小，勿擅为。",
          "trad": "事雖小，勿擅為。",
          "pinyin": ["shì", "suī", "xiǎo", "，", "wù", "shàn", "wéi", "。"]
        },
        {
          "seq": 10,
          "simp": "苟擅为，子道亏。",
          "trad": "苟擅為，子道虧。",
          "pinyin": ["gǒu", "shàn", "wéi", "，", "zǐ", "dào", "kuī", "。"]
        },
        {
          "seq": 11,
          "simp": "物虽小，勿私藏。",
          "trad": "物雖小，勿私藏。",
          "pinyin": ["wù", "suī", "xiǎo", "，", "wù", "sī", "cáng", "。"]
        },
        {
          "seq": 12,
          "simp": "苟私藏，亲心伤。",
          "trad": "苟私藏，親心傷。",
          "pinyin": ["gǒu", "sī", "cáng", "，", "qīn", "xīn", "shāng", "。"]
        },
        {
          "seq": 13,
          "simp": "亲所好，力为具。",
          "trad": "親所好，力為具。",
          "pinyin": ["qīn", "suǒ", "hào", "，", "lì", "wéi", "jù", "。"]
        },
        {
          "seq": 14,
          "simp": "亲所恶，谨为去。",
          "trad": "親所惡，謹為去。",
          "pinyin": ["qīn", "suǒ", "wù", "，", "jǐn", "wéi", "qù", "。"]
        },
        {
          "seq": 15,
          "simp": "身有伤，贻亲忧。",
          "trad": "身有傷，貽親憂。",
          "pinyin": ["shēn", "yǒu", "shāng", "，", "yí", "qīn", "yōu", "。"]
        },
        {
          "seq": 16,
          "simp": "德有伤，贻亲羞。",
          "trad": "德有傷，貽親羞。",
          "pinyin": ["dé", "yǒu", "shāng", "，", "yí", "qīn", "xiū", "。"]
        },
        {
          "seq": 17,
          "simp": "亲爱我，孝何难。",
          "trad": "親愛我，孝何難。",
          "pinyin": ["qīn", "ài", "wǒ", "，", "xiào", "hé", "nán", "。"]
        },
        {
          "seq": 18,
          "simp": "亲憎我，孝方贤。",
          "trad": "親憎我，孝方賢。",
          "pinyin": ["qīn", "zēng", "wǒ", "，", "xiào", "fāng", "xián", "。"]
        },
        {
          "seq": 19,
          "simp": "亲有过，谏使更。",
          "trad": "親有過，諫使更。",
          "pinyin": ["qīn", "yǒu", "guò", "，", "jiàn", "shǐ", "gēng", "。"]
        },
        {
          "seq": 20,
          "simp": "怡吾色，柔吾声。",
          "trad": "怡吾色，柔吾聲。",
          "pinyin": ["yí", "wú", "sè", "，", "róu", "wú", "shēng", "。"]
        },
        {
          "seq": 21,
          "simp": "谏不入，悦复谏。",
          "trad": "諫不入，悅復諫。",
          "pinyin": ["jiàn", "bù", "rù", "，", "yuè", "fù", "jiàn", "。"]
        },
        {
          "seq": 22,
          "simp": "号泣随，挞无怨。",
          "trad": "號泣隨，撻無怨。",
          "pinyin": ["háo", "qì", "suí", "，", "tà", "wú", "yuàn", "。"]
        },
        {
          "seq": 23,
          "simp": "亲有疾，药先尝。",
          "trad": "親有疾，藥先嘗。",
          "pinyin": ["qīn", "yǒu", "jí", "，", "yào", "xiān", "cháng", "。"]
        },
        {
          "seq": 24,
          "simp": "昼夜侍，不离床。",
          "trad": "晝夜侍，不離床。",
          "pinyin": ["zhòu", "yè", "shì", "，", "bù", "lí", "chuáng", "。"]
        },
        {
          "seq": 25,
          "simp": "丧三年，常悲咽。",
          "trad": "喪三年，常悲咽。",
          "pinyin": ["sāng", "sān", "nián", "，", "cháng", "bēi", "yè", "。"]
        },
        {
          "seq": 26,
          "simp": "居处变，酒肉绝。",
          "trad": "居處變，酒肉絕。",
          "pinyin": ["jū", "chù", "biàn", "，", "jiǔ", "ròu", "jué", "。"]
        },
        {
          "seq": 27,
          "simp": "丧尽礼，祭尽诚。",
          "trad": "喪盡禮，祭盡誠。",
          "pinyin": ["sāng", "jìn", "lǐ", "，", "jì", "jìn", "chéng", "。"]
        },
        {
          "seq": 28,
          "simp": "事死者，如事生。",
          "trad": "事死者，如事生。",
          "pinyin": ["shì", "sǐ", "zhě", "，", "rú", "shì", "shēng", "。"]
        }
      ]
    },
    {
      "chapter_no": 3,
      "title": "出则悌",
      "sentences": [
        {
          "seq": 1,
          "simp": "兄道友，弟道恭。",
          "trad": "兄道友，弟道恭。",
          "pinyin": ["xiōng", "dào", "yǒu", "，", "dì", "dào", "gōng", "。"]
        },
        {
          "seq": 2,
          "simp": "兄弟睦，孝在中。",
          "trad": "兄弟睦，孝在中。",
          "pinyin": ["xiōng", "dì", "mù", "，", "xiào", "zài", "zhōng", "。"]
        },
        {
          "seq": 3,
          "simp": "财物轻，怨何生。",
          "trad": "財物輕，怨何生。",
          "pinyin": ["cái", "wù", "qīng", "，", "yuàn", "hé", "shēng", "。"]
        },
        {
          "seq": 4,
          "simp": "言语忍，忿自泯。",
          "trad": "言語忍，忿自泯。",
          "pinyin": ["yán", "yǔ", "rěn", "，", "fèn", "zì", "mǐn", "。"]
        },
        {
          "seq": 5,
          "simp": "或饮食，或坐走。",
          "trad": "或飲食，或坐走。",
          "pinyin": ["huò", "yǐn", "shí", "，", "huò", "zuò", "zǒu", "。"]
        },
        {
          "seq": 6,
          "simp": "长者先，幼者后。",
          "trad": "長者先，幼者後。",
          "pinyin": ["zhǎng", "zhě", "xiān", "，", "yòu", "zhě", "hòu", "。"]
        },
        {
          "seq": 7,
          "simp": "长呼人，即代叫。",
          "trad": "長呼人，即代叫。",
          "pinyin": ["zhǎng", "hū", "rén", "，", "jí", "dài", "jiào", "。"]
        },
        {
          "seq": 8,
          "simp": "人不在，己即到。",
          "trad": "人不在，己即到。",
          "pinyin": ["rén", "bù", "zài", "，", "jǐ", "jí", "dào", "。"]
        },
        {
          "seq": 9,
          "simp": "称尊长，勿呼名。",
          "trad": "稱尊長，勿呼名。",
          "pinyin": ["chēng", "zūn", "zhǎng", "，", "wù", "hū", "míng", "。"]
        },
        {
          "seq": 10,
          "simp": "对尊长，勿见能。",
          "trad": "對尊長，勿見能。",
          "pinyin": ["duì", "zūn", "zhǎng", "，", "wù", "jiàn", "néng", "。"]
        },
        {
          "seq": 11,
          "simp": "路遇长，疾趋揖。",
          "trad": "路遇長，疾趨揖。",
          "pinyin": ["lù", "yù", "zhǎng", "，", "jí", "qū", "yī", "。"]
        },
        {
          "seq": 12,
          "simp": "长无言，退恭立。",
          "trad": "長無言，退恭立。",
          "pinyin": ["zhǎng", "wú", "yán", "，", "tuì", "gōng", "lì", "。"]
        },
        {
          "seq": 13,
          "simp": "骑下马，乘下车。",
          "trad": "騎下馬，乘下車。",
          "pinyin": ["qí", "xià", "mǎ", "，", "chéng", "xià", "chē", "。"]
        },
        {
          "seq": 14,
          "simp": "过犹待，百步余。",
          "trad": "過猶待，百步餘。",
          "pinyin": ["guò", "yóu", "dài", "，", "bǎi", "bù", "yú", "。"]
        },
        {
          "seq": 15,
          "simp": "长者立，幼勿坐。",
          "trad": "長者立，幼勿坐。",
          "pinyin": ["zhǎng", "zhě", "lì", "，", "yòu", "wù", "zuò", "。"]
        },
        {
          "seq": 16,
          "simp": "长者坐，命乃坐。",
          "trad": "長者坐，命乃坐。",
          "pinyin": ["zhǎng", "zhě", "zuò", "，", "mìng", "nǎi", "zuò", "。"]
        },
        {
          "seq": 17,
          "simp": "尊长前，声要低。",
          "trad": "尊長前，聲要低。",
          "pinyin": ["zūn", "zhǎng", "qián", "，", "shēng", "yào", "dī", "。"]
        },
        {
          "seq": 18,
          "simp": "低不闻，却非宜。",
          "trad": "低不聞，卻非宜。",
          "pinyin": ["dī", "bù", "wén", "，", "què", "fēi", "yí", "。"]
        },
        {
          "seq": 19,
          "simp": "进必趋，退必迟。",
          "trad": "進必趨，退必遲。",
          "pinyin": ["jìn", "bì", "qū", "，", "tuì", "bì", "chí", "。"]
        },
        {
          "seq": 20,
          "simp": "问起对，视勿移。",
          "trad": "問起對，視勿移。",
          "pinyin": ["wèn", "qǐ", "duì", "，", "shì", "wù", "yí", "。"]
        },
        {
          "seq": 21,
          "simp": "事诸父，如事父。",
          "trad": "事諸父，如事父。",
          "pinyin": ["shì", "zhū", "fù", "，", "rú", "shì", "fù", "。"]
        },
        {
          "seq": 22,
          "simp": "事诸兄，如事兄。",
          "trad": "事諸兄，如事兄。",
          "pinyin": ["shì", "zhū", "xiōng", "，", "rú", "shì", "xiōng", "。"]
        }
      ]
    },
    {
      "chapter_no": 4,
      "title": "谨",
      "sentences": [
        {
          "seq": 1,
          "simp": "朝起早，夜眠迟。",
          "trad": "朝起早，夜眠遲。",
          "pinyin": ["zhāo", "qǐ", "zǎo", "，", "yè", "mián", "chí", "。"]
        },
        {
          "seq": 2,
          "simp": "老易至，惜此时。",
          "trad": "老易至，惜此時。",
          "pinyin": ["lǎo", "yì", "zhì", "，", "xī", "cǐ", "shí", "。"]
        },
        {
          "seq": 3,
          "simp": "晨必盥，兼漱口。",
          "trad": "晨必盥，兼漱口。",
          "pinyin": ["chén", "bì", "guàn", "，", "jiān", "shù", "kǒu", "。"]
        },
        {
          "seq": 4,
          "simp": "便溺回，辄净手。",
          "trad": "便溺回，輒淨手。",
          "pinyin": ["biàn", "niào", "huí", "，", "zhé", "jìng", "shǒu", "。"]
        },
        {
          "seq": 5,
          "simp": "冠必正，纽必结。",
          "trad": "冠必正，紐必結。",
          "pinyin": ["guān", "bì", "zhèng", "，", "niǔ", "bì", "jié", "。"]
        },
        {
          "seq": 6,
          "simp": "袜与履，俱紧切。",
          "trad": "襪與履，俱緊切。",
          "pinyin": ["wà", "yǔ", "lǚ", "，", "jù", "jǐn", "qiē", "。"]
        },
        {
          "seq": 7,
          "simp": "置冠服，有定位。",
          "trad": "置冠服，有定位。",
          "pinyin": ["zhì", "guān", "fú", "，", "yǒu", "dìng", "wèi", "。"]
        },
        {
          "seq": 8,
          "simp": "勿乱顿，致污秽。",
          "trad": "勿亂頓，致污穢。",
          "pinyin": ["wù", "luàn", "dùn", "，", "zhì", "wū", "huì", "。"]
        },
        {
          "seq": 9,
          "simp": "衣贵洁，不贵华。",
          "trad": "衣貴潔，不貴華。",
          "pinyin": ["yī", "guì", "jié", "，", "bù", "guì", "huá", "。"]
        },
        {
          "seq": 10,
          "simp": "上循分，下称家。",
          "trad": "上循分，下稱家。",
          "pinyin": ["shàng", "xún", "fèn", "，", "xià", "chēng", "jiā", "。"]
        },
        {
          "seq": 11,
          "simp": "对饮食，勿拣择。",
          "trad": "對飲食，勿揀擇。",
          "pinyin": ["duì", "yǐn", "shí", "，", "wù", "jiǎn", "zé", "。"]
        },
        {
          "seq": 12,
          "simp": "食适可，勿过则。",
          "trad": "食適可，勿過則。",
          "pinyin": ["shí", "shì", "kě", "，", "wù", "guò", "zé", "。"]
        },
        {
          "seq": 13,
          "simp": "年方少，勿饮酒。",
          "trad": "年方少，勿飲酒。",
          "pinyin": ["nián", "fāng", "shào", "，", "wù", "yǐn", "jiǔ", "。"]
        },
        {
          "seq": 14,
          "simp": "饮酒醉，最为丑。",
          "trad": "飲酒醉，最為醜。",
          "pinyin": ["yǐn", "jiǔ", "zuì", "，", "zuì", "wéi", "chǒu", "。"]
        },
        {
          "seq": 15,
          "simp": "步从容，立端正。",
          "trad": "步從容，立端正。",
          "pinyin": ["bù", "cóng", "róng", "，", "lì", "duān", "zhèng", "。"]
        },
        {
          "seq": 16,
          "simp": "揖深圆，拜恭敬。",
          "trad": "揖深圓，拜恭敬。",
          "pinyin": ["yī", "shēn", "yuán", "，", "bài", "gōng", "jìng", "。"]
        },
        {
          "seq": 17,
          "simp": "勿践阈，勿跛倚。",
          "trad": "勿踐閾，勿跛倚。",
          "pinyin": ["wù", "jiàn", "yù", "，", "wù", "bǒ", "yǐ", "。"]
        },
        {
          "seq": 18,
          "simp": "勿箕踞，勿摇髀。",
          "trad": "勿箕踞，勿搖髀。",
          "pinyin": ["wù", "jī", "jù", "，", "wù", "yáo", "bì", "。"]
        },
        {
          "seq": 19,
          "simp": "缓揭帘，勿有声。",
          "trad": "緩揭簾，勿有聲。",
          "pinyin": ["huǎn", "jiē", "lián", "，", "wù", "yǒu", "shēng", "。"]
        },
        {
          "seq": 20,
          "simp": "宽转弯，勿触棱。",
          "trad": "寬轉彎，勿觸稜。",
          "pinyin": ["kuān", "zhuǎn", "wān", "，", "wù", "chù", "léng", "。"]
        },
        {
          "seq": 21,
          "simp": "执虚器，如执盈。",
          "trad": "執虛器，如執盈。",
          "pinyin": ["zhí", "xū", "qì", "，", "rú", "zhí", "yíng", "。"]
        },
        {
          "seq": 22,
          "simp": "入虚室，如有人。",
          "trad": "入虛室，如有人。",
          "pinyin": ["rù", "xū", "shì", "，", "rú", "yǒu", "rén", "。"]
        },
        {
          "seq": 23,
          "simp": "事勿忙，忙多错。",
          "trad": "事勿忙，忙多錯。",
          "pinyin": ["shì", "wù", "máng", "，", "máng", "duō", "cuò", "。"]
        },
        {
          "seq": 24,
          "simp": "勿畏难，勿轻略。",
          "trad": "勿畏難，勿輕略。",
          "pinyin": ["wù", "wèi", "nán", "，", "wù", "qīng", "lüè", "。"]
        },
        {
          "seq": 25,
          "simp": "斗闹场，绝勿近。",
          "trad": "鬥鬧場，絕勿近。",
          "pinyin": ["dòu", "nào", "chǎng", "，", "jué", "wù", "jìn", "。"]
        },
        {
          "seq": 26,
          "simp": "邪僻事，绝勿问。",
          "trad": "邪僻事，絕勿問。",
