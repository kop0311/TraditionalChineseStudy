<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
    <style>
        .child-card {
            transition: transform 0.2s;
        }
        .child-card:hover {
            transform: translateY(-5px);
        }
        .progress-ring {
            width: 60px;
            height: 60px;
        }
        
        /* 头像选择弹窗样式 */
        .avatar-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            z-index: 1000;
        }
        
        .avatar-modal-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            border-radius: 15px;
            padding: 20px;
            width: 90%;
            max-width: 800px;
            max-height: 90%;
            overflow-y: auto;
        }
        
        .avatar-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
            gap: 15px;
            margin: 20px 0;
        }
        
        .avatar-item {
            text-align: center;
            padding: 10px;
            border: 2px solid transparent;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .avatar-item:hover {
            border-color: #007bff;
            background-color: #f8f9fa;
        }
        
        .avatar-item.selected {
            border-color: #28a745;
            background-color: #d4edda;
        }
        
        .avatar-img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-bottom: 5px;
            border: 2px solid #ddd;
        }
        
        .avatar-set-tabs {
            border-bottom: 1px solid #dee2e6;
            margin-bottom: 20px;
        }
        
        .avatar-set-tab {
            display: inline-block;
            padding: 10px 20px;
            background: none;
            border: none;
            border-bottom: 3px solid transparent;
            cursor: pointer;
            color: #6c757d;
            font-weight: 500;
            margin-right: 10px;
        }
        
        .avatar-set-tab.active {
            border-bottom-color: #007bff;
            color: #007bff;
        }
        
        .close-modal {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 24px;
            cursor: pointer;
            color: #999;
        }
        
        .close-modal:hover {
            color: #333;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">小小读书郎 - 家长中心</a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">欢迎，<%= user.name || user.email %></span>
                <a class="nav-link text-white" href="/">学习页面</a>
                <form method="POST" action="/auth/logout" class="d-inline">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-outline-light btn-sm">退出登录</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <!-- 成功消息 -->
        <% if (locals.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <% if (success === 'registration_complete') { %>
                    🎉 注册成功！欢迎加入小小读书郎大家庭！
                <% } else if (success === 'child_added') { %>
                    👶 孩子添加成功！
                <% } %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- 页面标题 -->
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="h3">👨‍👩‍👧‍👦 家长中心</h1>
                <p class="text-muted">管理孩子的中文学习，查看学习进度和成果</p>
            </div>
        </div>

        <!-- 添加孩子 -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">👶 添加孩子</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/auth/children" class="row g-3">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="col-md-4">
                                <label for="name" class="form-label">孩子姓名</label>
                                <input type="text" class="form-control" id="name" name="name" 
                                       placeholder="例如：小明" required>
                            </div>
                            <div class="col-md-4">
                                <label for="birthDate" class="form-label">出生日期（可选）</label>
                                <input type="date" class="form-control" id="birthDate" name="birthDate">
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary">
                                    ➕ 添加孩子
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- 孩子列表 -->
        <div class="row">
            <div class="col-12">
                <h4 class="mb-3">🌟 我的孩子们</h4>
                
                <% if (children && children.length > 0) { %>
                    <div class="row">
                        <% children.forEach(function(child) { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card child-card h-100">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <% if (child.avatar_url || (child.avatarConfig && child.avatarConfig.preview_url)) { %>
                                                <img src="<%= child.avatar_url || child.avatarConfig.preview_url %>" 
                                                     alt="<%= child.name %> 的头像" 
                                                     class="rounded-circle" 
                                                     style="width: 80px; height: 80px; border: 3px solid #007bff;">
                                            <% } else { %>
                                                <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" 
                                                     style="width: 80px; height: 80px;">
                                                    <span class="text-white fs-2">👶</span>
                                                </div>
                                            <% } %>
                                        </div>
                                        
                                        <h5 class="card-title"><%= child.name %></h5>
                                        
                                        <% if (child.birth_date) { %>
                                            <p class="text-muted small">
                                                生日：<%= new Date(child.birth_date).toLocaleDateString('zh-CN') %>
                                            </p>
                                        <% } %>
                                        
                                        <!-- 学习统计 -->
                                        <div class="row text-center mt-3">
                                            <div class="col-4">
                                                <div class="text-primary fw-bold">0</div>
                                                <small class="text-muted">练习次数</small>
                                            </div>
                                            <div class="col-4">
                                                <div class="text-success fw-bold">0</div>
                                                <small class="text-muted">掌握汉字</small>
                                            </div>
                                            <div class="col-4">
                                                <div class="text-info fw-bold">0</div>
                                                <small class="text-muted">学习天数</small>
                                            </div>
                                        </div>
                                        
                                        <div class="mt-3">
                                            <button onclick="openAvatarModal(<%= child.id %>)" class="btn btn-outline-primary btn-sm mb-1">
                                                <i class="fas fa-user-circle me-1"></i>选择头像
                                            </button>
                                            <a href="/child/<%= child.id %>/progress" class="btn btn-outline-info btn-sm mb-1">
                                                <i class="fas fa-chart-line me-1"></i>查看详情
                                            </a>
                                            <a href="/child/<%= child.id %>/practice" class="btn btn-success btn-sm mb-1">
                                                <i class="fas fa-play me-1"></i>开始学习
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <span style="font-size: 4rem;">👶</span>
                        </div>
                        <h5 class="text-muted">还没有添加孩子</h5>
                        <p class="text-muted">请使用上方表单添加第一个孩子，开始学习之旅！</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- 快速链接 -->
        <div class="row mt-5">
            <div class="col-12">
                <h4 class="mb-3">🔗 快速链接</h4>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="/" class="card text-decoration-none">
                            <div class="card-body text-center">
                                <div class="text-primary fs-1">📚</div>
                                <h6 class="card-title">经典阅读</h6>
                                <p class="card-text small text-muted">道德经、三字经</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/admin" class="card text-decoration-none">
                            <div class="card-body text-center">
                                <div class="text-success fs-1">⚙️</div>
                                <h6 class="card-title">管理后台</h6>
                                <p class="card-text small text-muted">内容管理</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="text-info fs-1">📈</div>
                                <h6 class="card-title">学习报告</h6>
                                <p class="card-text small text-muted">即将推出</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="text-warning fs-1">🎯</div>
                                <h6 class="card-title">学习计划</h6>
                                <p class="card-text small text-muted">即将推出</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 头像选择弹窗 -->
    <div id="avatarModal" class="avatar-modal">
        <div class="avatar-modal-content">
            <span class="close-modal" onclick="closeAvatarModal()">&times;</span>
            <h5 class="mb-3">
                <i class="fas fa-user-circle me-2"></i>
                为 <span id="modalChildName" class="text-primary"></span> 选择头像
            </h5>
            
            <!-- 头像套装选项卡 -->
            <div class="avatar-set-tabs" id="modalAvatarSetTabs">
                <!-- 动态加载 -->
            </div>
            
            <!-- 头像网格 -->
            <div class="avatar-grid" id="modalAvatarGrid">
                <!-- 动态加载 -->
            </div>
            
            <!-- 操作按钮 -->
            <div class="d-flex justify-content-between mt-4">
                <button type="button" class="btn btn-secondary" onclick="closeAvatarModal()">
                    <i class="fas fa-times me-2"></i>取消
                </button>
                <button id="modalSaveAvatar" class="btn btn-primary" disabled>
                    <i class="fas fa-save me-2"></i>保存头像
                </button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 头像选择弹窗相关变量
        let currentModalChildId = null;
        let currentModalChildName = '';
        let modalSelectedAvatarConfig = null;
        let modalAvatarSets = [];

        // 打开头像选择弹窗
        async function openAvatarModal(childId) {
            // 查找孩子信息
            const childCards = document.querySelectorAll('.child-card');
            let childName = '';
            
            childCards.forEach(card => {
                const button = card.querySelector(`button[onclick="openAvatarModal(${childId})"]`);
                if (button) {
                    childName = card.querySelector('h5.card-title').textContent;
                }
            });

            currentModalChildId = childId;
            currentModalChildName = childName;
            
            // 更新弹窗标题
            document.getElementById('modalChildName').textContent = childName;
            
            // 显示弹窗
            document.getElementById('avatarModal').style.display = 'block';
            
            // 加载头像套装
            await loadModalAvatarSets();
        }

        // 关闭弹窗
        function closeAvatarModal() {
            document.getElementById('avatarModal').style.display = 'none';
            currentModalChildId = null;
            modalSelectedAvatarConfig = null;
            document.getElementById('modalSaveAvatar').disabled = true;
        }

        // 加载头像套装
        async function loadModalAvatarSets() {
            try {
                const response = await fetch('/api/avatar/sets');
                modalAvatarSets = await response.json();
                
                renderModalAvatarSetTabs();
                if (modalAvatarSets.length > 0) {
                    showModalAvatarSet(modalAvatarSets[0].id);
                }
            } catch (error) {
                console.error('加载头像套装失败:', error);
                alert('加载头像套装失败，请刷新页面重试');
            }
        }

        // 渲染头像套装选项卡
        function renderModalAvatarSetTabs() {
            const tabsContainer = document.getElementById('modalAvatarSetTabs');
            tabsContainer.innerHTML = '';

            modalAvatarSets.forEach((set, index) => {
                const tab = document.createElement('button');
                tab.className = `avatar-set-tab ${index === 0 ? 'active' : ''}`;
                tab.textContent = set.name;
                tab.onclick = () => showModalAvatarSet(set.id);
                tabsContainer.appendChild(tab);
            });
        }

        // 显示特定套装的头像
        async function showModalAvatarSet(setId) {
            try {
                // 更新选项卡状态
                document.querySelectorAll('.avatar-set-tab').forEach((tab, index) => {
                    tab.classList.remove('active');
                    if (modalAvatarSets[index] && modalAvatarSets[index].id === setId) {
                        tab.classList.add('active');
                    }
                });

                // 加载头像配置
                const response = await fetch(`/api/avatar/sets/${setId}/configs`);
                const configs = await response.json();
                
                renderModalAvatarGrid(configs);
            } catch (error) {
                console.error('加载头像配置失败:', error);
                alert('加载头像配置失败');
            }
        }

        // 渲染头像网格
        function renderModalAvatarGrid(configs) {
            const grid = document.getElementById('modalAvatarGrid');
            grid.innerHTML = '';

            configs.forEach(config => {
                const item = document.createElement('div');
                item.className = 'avatar-item';
                item.innerHTML = `
                    <img src="${config.preview_url}" alt="头像 ${config.avatar_index}" class="avatar-img">
                    <div class="small">头像 ${config.avatar_index + 1}</div>
                `;
                item.onclick = (e) => selectModalAvatar(config, e.currentTarget);
                grid.appendChild(item);
            });
        }

        // 选择头像
        function selectModalAvatar(config, element) {
            // 移除之前的选择
            document.querySelectorAll('#modalAvatarGrid .avatar-item').forEach(item => {
                item.classList.remove('selected');
            });

            // 选择当前项
            element.classList.add('selected');
            modalSelectedAvatarConfig = config;

            // 启用保存按钮
            document.getElementById('modalSaveAvatar').disabled = false;
        }

        // 保存头像
        document.getElementById('modalSaveAvatar').onclick = async function() {
            if (!modalSelectedAvatarConfig) {
                alert('请先选择一个头像');
                return;
            }

            try {
                const response = await fetch(`/api/avatar/children/${currentModalChildId}/avatar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        avatar_config_id: modalSelectedAvatarConfig.id
                    })
                });

                if (response.ok) {
                    alert('头像保存成功！');
                    closeAvatarModal();
                    // 刷新页面以更新头像显示
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('保存失败: ' + error.error);
                }
            } catch (error) {
                console.error('保存头像失败:', error);
                alert('保存头像失败，请重试');
            }
        };

        // 点击弹窗外部关闭弹窗
        window.onclick = function(event) {
            const modal = document.getElementById('avatarModal');
            if (event.target === modal) {
                closeAvatarModal();
            }
        }
    </script>
</body>
</html>