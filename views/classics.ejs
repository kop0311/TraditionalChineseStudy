<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="<%= CDN_BOOTSTRAP %>" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">小小读书郎</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">首页</a>
                <a class="nav-link" href="/admin">管理后台</a>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">经典文本</h1>
                
                <% classics.forEach(function(classic) { %>
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3 class="mb-0"><%= classic.title %></h3>
                            <small class="text-muted"><%= classic.author %> · <%= classic.dynasty %></small>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <% classic.chapters.forEach(function(chapter) { %>
                                    <div class="col-md-3 col-sm-4 col-6 mb-2">
                                        <a href="/reader/<%= classic.slug %>/<%= chapter.chapter_no %>" 
                                           class="btn btn-outline-primary btn-sm w-100">
                                            <%= chapter.title %>
                                        </a>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <footer class="bg-light py-4 mt-5">
        <div class="container text-center">
            <p class="mb-0 text-muted">小小读书郎 - 让孩子在5分钟内学会1个字</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>